@using ITConferences.WebUI.Helpers
@model IEnumerable<ITConferences.Domain.Entities.Conference>




@{
    ViewBag.Title = "Conferences";
}

<style>
    .btn:active {
        box-shadow: none;
    }

    .link-format {
        color: lightseagreen;
    }

        .link-format:hover {
            color: lightseagreen;
            text-decoration: none;
        }

    .conference-name {
        font-weight: bold;
    }
    .body {
        overflow-scrolling: touch;
    }
</style>

<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/multi-select.css" rel="stylesheet" />
<link href="~/Content/jquery.multiselect.filter.css" rel="stylesheet"/>

<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/jquery.multi-select.js"></script>
<script src="~/Scripts/jquery.multiselect.filter.js"></script>
<script src="~/Scripts/display-conferences.js"></script>



<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="form-group center-block submit">

                <div class="col-md-3 col-xs-4">
                    @Html.TextBox("NameFilter", ViewData["NameFilter"], new { @id = "name", @type = "text", @class = "form-control", @placeholder = "Event name" })
                </div>
                <div class="col-md-3 col-xs-4">
                    @Html.TextBox("LocationFilter", ViewData["LocationFilter"], new { @id = "location", @type = "text", @class = "form-control", @placeholder = "Location" })
                </div>
                <div class="col-md-3 col-xs-4">
                    @Html.ListBox("TagsFilter", ViewData["TagsFilter"] as MultiSelectList, htmlAttributes: new { @id = "tags", @class = "hide" })
                </div>
                <div class="col-md-2 col-xs-4">
                    @Html.DropDownList("DateFilter", EnumHelper.GetSelectList(typeof(DateFilter)), htmlAttributes: new { @id= "dateFilter", @class = "form-control" })
              </div>
            </div>
        </div>

        <div class="row">
            <button id="submitButton" type="submit" value="Submit" class="btn btn-success btn-lg pull-right"><span class="glyphicon glyphicon-search"></span></button>
        </div>

    </div>

    <div class="row">
        @Html.Partial("_ConferencesView")
    </div>
</div>
