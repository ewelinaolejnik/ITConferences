@model ITConferences.Domain.Concrete.DataContext

<div class="row">
    <section>
        <div class="form-group">
            <div class="col-md-4 col-xs-4">
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <label class="control-label"></label>
                        <input type="text" class="form-control">
                        <span class="glyphicon glyphicon-search form-control-feedback"></span>
                    </div>
                </form>
            </div>
            <div class="col-md-4 col-xs-4">
                @Html.DropDownList("Countries", ViewData["Countries"] as SelectList, "Select country", htmlAttributes: new { @class = "form-control multiselect multiselect-info" })
            </div>
            <div class="col-md-4 col-xs-4">
                @Html.DropDownList("Cities", new SelectList(string.Empty, "CityID", "Name"), "Select city", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

    </section>
</div>
