<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/flat-ui.css" rel="stylesheet" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-5">
                    <span class="sr-only">Toggle navigation</span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-left" })
            </div>
            <div class="nav navbar-nav navbar-right" id="#navbar-collapse-5">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Conferences", "Conferences", "Home")</li>
                    <li>@Html.ActionLink("Speakers", "Speakers", "Home")</li>
                </ul>
                <div role="search" class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" placeholder="Search" class="form-control">
                    </div>
                    <button class="btn btn-default" type="submit">Submit</button>
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <div class="footer navbar-inverse navbar-fixed-bottom">
            <div class="container">
                <div class="row">
                    <a class="col-xs-6" href="mailto:ewelina.olejnik@outlook.com">Contact us</a>
                    <a class="col-xs-6 text-right" href="../Home/About">About</a>
                </div>
            </div>
        </div>

    </div>

    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/flat-ui.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
