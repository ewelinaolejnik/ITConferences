@model IEnumerable<ITConferences.Domain.Entities.Conference>
@{
    ViewBag.Title = "SpokenConferences";
}

@Styles.Render("~/Content/details")

<div class="container form-group">
    <h4 class="text-success">You are a speaker at:</h4>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-1 btn buffer">
                <a href="@Url.Action("Details", "Conferences", new {id = item.ConferenceID})" class="link-format">
                    <div class="col-md-4 col-xs-6">
                        @if (item.Image != null)
                        {
                            <img src="@Url.Action("GetImage", "Conferences", new {imageId = item.ImageId}, null)" class="img-responsive img-thumbnail" alt="Conference image" />
                        }
                        else
                        {
                            <img src="../../img/default.jpg" class="img-responsive img-thumbnail" alt="Conference image" />
                        }
                    </div>

                    <div class="col-md-8 col-xs-6 text-left">
                        <div class="row conference-name">@Html.DisplayFor(modelItem => item.Name)</div>
                        <div class="row">@Html.DisplayFor(modelItem => item.TargetCountry.Name), @Html.DisplayFor(modelItem => item.TargetCity.Name)</div>
                        <div class="row">@Html.DisplayFor(modelItem => item.StartDate)</div>
                        <div class="row">@Html.DisplayFor(modelItem => item.Url)</div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
