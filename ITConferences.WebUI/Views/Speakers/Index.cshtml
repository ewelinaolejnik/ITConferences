@model IEnumerable<ITConferences.Domain.Entities.Speaker>

@{
    ViewBag.Title = "Speakers";
}


<style>
    .btn:active {
        box-shadow: none;
    }

    .link-format {
        color: lightseagreen;
    }

        .link-format:hover {
            color: lightseagreen;
            text-decoration: none;
        }

    .conference-name {
        font-weight: bold;
    }

    .body {
        overflow-scrolling: touch;
    }
</style>

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="form-group  center-block">
                <div class="col-md-3 col-xs-4">
                    @Html.TextBox("NameFilter", ViewData["NameFilter"], new { @id = "name", @type = "text", @class = "form-control", @placeholder = "Event name" })
                </div>
            </div>
        </div>

        <div class="row">
            <button id="submitButton" type="submit" value="Submit" class="btn btn-success btn-lg pull-right"><span class="glyphicon glyphicon-search"></span></button>
        </div>

    </div>

    <div class="row">
        @Html.Partial("_ConferencesView")
    </div>
</div>
