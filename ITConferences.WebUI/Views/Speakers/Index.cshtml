@model IEnumerable<ITConferences.Domain.Entities.Speaker>

@{
    ViewBag.Title = "Speakers";
}


<style>
    .btn:active {
        box-shadow: none;
    }

    .link-format {
        color: lightseagreen;
    }

        .link-format:hover {
            color: lightseagreen;
            text-decoration: none;
        }

    .conference-name {
        font-weight: bold;
    }

    .body {
        overflow-scrolling: touch;
    }
   
</style>

<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<script src="~/Scripts/display-speakers.js"></script>

<div class="container">

    <div>
        <div class="row jumbotron">
            <div class="form-inline">
                <div class="form-group submit">
                    @Html.TextBox("NameFilter", null, new { @id = "name", @type = "text", @class = "form-control input-lg", @placeholder = "Name" })
                    <button id="submitButton" type="submit" value="Submit" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-search"></span></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @Html.Partial("_SpeakersView")
    </div>
</div>
